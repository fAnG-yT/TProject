.loading-background {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  height: 100vh;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 300;
}
.loading-box {
  background-color: #ffffff;
  border-radius: 20rpx;
  width: 360rpx;
  height: 360rpx;
  position: absolute;
  margin: auto;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  z-index: 301;
  border: #fff 2rpx solid;
}
.loading-box .iconfont {
  font-size: 100rpx;
  width: 200rpx;
  height: 200rpx;
  animation: loading 1.5s infinite linear;
}
.loading-box .text {
  margin-top: 40rpx;
  color: #f77e5e;
}
@keyframes loading {
  from {
    transform: scaleY(1);
  }
  50% {
    transform: scaleY(0.7);
  }
  to {
    transform: scaleY(1);
  }
}
